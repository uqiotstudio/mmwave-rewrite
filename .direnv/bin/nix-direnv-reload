#!/usr/bin/env bash
set -e
if [[ ! -d "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite/.envrc" "/home/mcarthur/Dev/mmWave-dash/mmwave-rewrite/.direnv"/*.rc
